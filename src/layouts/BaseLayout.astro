---
import '../styles/global.css';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import SEO from '../components/common/SEO.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  ogType?: string;
  noIndex?: boolean;
}

const {
  title,
  description = '매일 아침, 시험에서 뽑은 핵심 개념을 한 입 크기 퀴즈로. AI가 만든 오리지널 문제 + 초등학생도 이해하는 해설.',
  ogImage,
  ogType = 'website',
  noIndex = false,
} = Astro.props;

const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://brain-snack.vercel.app';
const fullTitle = title === '뇌간식' ? '뇌간식 — 매일 한 입 크기 지식 퀴즈' : `${title} | 뇌간식`;
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <SEO
      title={fullTitle}
      description={description}
      ogImage={ogImage || `${siteUrl}/og-default.png`}
      ogType={ogType}
      siteUrl={siteUrl}
      noIndex={noIndex}
    />
    <link rel="preload" href="/fonts/PretendardVariable.subset.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body class="min-h-screen flex flex-col bg-[var(--color-bg-light)] text-[var(--color-text-primary)] dark:bg-[var(--color-dark-bg)] dark:text-[var(--color-dark-text)]">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
